extends layout

block content
  h1= title
  - let results = [{ material: "Wood", style: "Vintage", price: 100 },{ material: "Metal", style: "Modern", price: 150 },{ material: "Glass", style: "Art Deco", price: 200 }]
  div(class="container-fluid")
    div(class="row")
      each item, index in results  
        div(class="col-sm-2",onclick=`buy(${index})`)
          p #{item.material}
          p #{item.style}
          p #{item.price}
  script.
    function buy(index) {
    alert("You purchased item " + index);}