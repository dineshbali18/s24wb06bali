extends layout
 
block content
  h1=title 
  - var image_names = ['IMG1.jpg', 'IMG2.png', 'IMG3.jpg', 'IMG4.jpg', 'IMG5.jpg']
  - var height = 200
  - var width = 200
  - var displayedImages = []
  while displayedImages.length < 3
    - var randomIndex = Math.floor(Math.random() * 5)
    - var randomImage = image_names[randomIndex]
    - if (!displayedImages.includes(randomImage))
      - displayedImages.push(randomImage)
      img(
        src=`/images/${randomImage}`,
        alt=`${randomImage}`,
        height=height,
        width=width
      )